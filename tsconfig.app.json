{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "typings/app/*.d.ts",
    "typings/common/*.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "types": ["naive-ui/volar"],
    "paths": {
      "@/*": ["./src/*"],
      "api/*": ["./src/api/modules/*"]
    }
  }
}
